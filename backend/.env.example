# HomeDar Backend - Django Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# Django Secret Key (generate a new one for production)
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Default: SQLite (no configuration needed)
# For PostgreSQL, uncomment and configure the following:

# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=homedar_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Media Files Configuration
MEDIA_ROOT=media
MEDIA_URL=/media/

# Static Files Configuration
STATIC_ROOT=staticfiles
STATIC_URL=/static/

# Email Configuration (Optional - for contact form notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Logging Level
LOG_LEVEL=INFO
