# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/homedar

# Option 2: Use individual database settings (for PostgreSQL)
# DB_NAME=homedar
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432

# If neither DATABASE_URL nor DB_NAME is set, SQLite will be used (default for development)

# Allowed Hosts (comma-separated, for production)
# ALLOWED_HOSTS=example.com,www.example.com

# CORS Allowed Origins (comma-separated, for production)
# CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Email Configuration (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@homedar.com

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Use these values only for production
# USE_GCS_MEDIA=true
# GS_BUCKET_NAME=your-homedar-media-bucket
# Optional if not using default credentials:
# GS_CREDENTIALS_FILE=/app/secrets/gcp-service-account.json

# Network Access (for development - comma-separated)
# Add your local network IP to allow access from other devices on your network
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,192.168.0.109
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CSRF Trusted Origins (comma-separated)
# Add frontend URLs that should be trusted for CSRF protection
# Include both localhost and network IPs if accessing from other devices
# Example: CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.0.109:3000,http://192.168.0.109:8000
# CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
